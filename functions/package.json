{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "build": "tsc",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulator": "firebase emulators:start --project=demo-oopsie-poopsie --only database,auth,functions --import=./emulator-data --export-on-exit=./emulator-data"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "short-unique-id": "^5.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-promise": "^6.1.1",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^15.5.1",
    "typescript": "^5.9.3"
  },
  "private": true
}
